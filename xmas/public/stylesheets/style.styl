body
    font 14px "Lucida Grande", Helvetica, Arial, sans-serif
    background url("../images/bg_02.png") 0 0
    background-size 400px
    
@-webkit-keyframes twinkling
    0%
        opacity 1
    60%
        opacity 1
    100%
        opacity 0.7
#xmas
    position relative
    margin auto
    min-width 320px
    max-width 640px
    .full
        width 100%
        margin 0px
        padding 0px
    .bd
        position relative
        min-height 300px
        .overlay
            position absolute
            left 0
            top -40px
            z-index 10
        .buttons
            position absolute
            left 0
            top 0
            width 100%
            z-index 20
        .button
            margin 18px 0
            display block
            border-radius 15px
            width 96%
            margin-left 2%
            height 48px
            line-height 48px
            text-align center
            background-color #ffe900
            color #eb262d
            font-size 18px
            font-weight bold
    .gifts-c
        position relative
        .tree
            display block
            margin auto
            max-height 480px
        .star-c
            position absolute
            left 0
            top 10px
            width 100%
        .star
            display block
            width 36px
            height 36px
            margin auto
        .twinking-0
            -webkit-animation twinkling 1s infinite ease-in-out
        .twinking-1
            -webkit-animation twinkling 1s infinite ease-in-out
        .twinking-2
            -webkit-animation twinkling 1.2s infinite ease-in-out
        .twinking-3
            -webkit-animation twinkling 1.4s infinite ease-in-out
        .twinking-4
            -webkit-animation twinkling 1.6s infinite ease-in-out
    .gifts
