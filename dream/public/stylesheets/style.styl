body
    font 14px "Lucida Grande", Helvetica, Arial, sans-serif
    background #ee412a
#dream
    position relative
    margin auto
    min-width 320px
    max-width 640px
    .wall-c
        position relative
        text-align center
        margin-bottom 20px
    .wall
        width 100%
        margin 0px
        padding 0px
    a
        display block
    .button
        position absolute
        display inline-block
        width 100%
        left 0px
        z-index 100
        text-align center
        color #000
        font-size 20px
        height 60px
        line-height 60px
    .button-sub
        color #fff
    #rank
        position absolute
        top 45%
        padding 0 5px
        margin-bottom 20px
        min-width 90%
        img
            display block
        .bd
            background #fff
            padding 0 10px
            padding-bottom 20px
            li
                clear both
                height 48px
                padding-bottom 10px
                margin-bottom 10px
                border-bottom 1px solid #b2b2b2
            img
                float left
                display block
                width 48px
                height 48px
            span
                float left
                display block
                height 48px
                line-height 48px
                margin 0 10px
                color #333
            .label
                height 20px
                border-bottom 2px solid #e60012
                span
                    height 24px
                    line-height 24px
                    color #e60012
                    font-weight bold
                span.money
                    float right
            .num
                width 16px
                text-align center
            .nickname
                width 40%
                font-size 12px
            .bonus
                width 15%
                text-align right
            .created-time
                width 50%
                font-size 12px
    .profile
        position relative
        top -30px
        text-align center
        *
            margin 5px
            color #fff
        img
            width 64px
            height 64px
            border-radius 64px
    .mask
        position fixed
        width 100%
        height 100%
        top 0px
        left 0px
        background #000
        opacity 0.8
        display none
        img
            width 100%