body
    font 14px "Lucida Grande", Helvetica, Arial, sans-serif
    background #d34731

@-webkit-keyframes inscreen
    from
        height 0px
    to
        height 150px
@-webkit-keyframes moving
    0%
        margin-top 0px
    50%
        margin-top 12px
    100%
        margin-top 0px

.hd
    position relative
    img.bg
        width 100%
    .gift-c
        position absolute
        width 100%
        left 0
        bottom 10px
        height 150px
        text-align center
        img
            animation: inscreen 1s;
            -moz-animation: inscreen 1s; /* Firefox */
            -webkit-animation: inscreen 1s;  /* Safari 和 Chrome */
            -o-animation: inscreen 1s;   /* Opera */
            height 100%
        img.moving
            animation: moving infinite 1.5s;
            -moz-animation: moving infinite 1.5s; /* Firefox */
            -webkit-animation: moving infinite 1.5s;  /* Safari 和 Chrome */
            -o-animation: moving infinite 1.5s;   /* Opera */
            height 100%
        
.bd
    margin-bottom 50px
    .button
        display block
        margin 15px 30px
        height 40px
        line-height 40px
        background-color #fed034
        border-radius 5px
        border-bottom 4px solid #ff9900
        text-align center
        img
            height 16px
            margin-top 4%
    .sub-button
        background-color #af2e1a
        border-bottom 4px solid #7c2012
    .rank
        background-color #fec71c
        margin 20px 10px
        height 36px
        line-height 36px
        padding-left 10px
        color #000
        .tit
            float left
            display inline-block
        .winners
            float left
            width 70%
            display inline-block
            height 36px
            line-height 36px
            overflow hidden
            p
                display none
            .current
                display block
    .votes
        .tit
            margin 0 10px
            border-radius 5px 5px 0 0
            background-color #a52f1d
            color #fff
            height 30px
            line-height 30px
            padding-left 10px
        li
            margin 0 10px
            padding 10 0px
            display block
            background-color #cf4029
            height 50px
            line-height 50px
            border-bottom 1px dashed #8e2616
            img
                float left
                display inline-block
                width 36px
                height 36px
                border-radius 18px
                margin 5px 0 0 10px
            .voter
                float left
                display inline-block
                width 80%
                margin 10px 0 0 5px
                p
                    height 18px
                    line-height 18px
                    color #fff
    
.howto
    h6
        position relative
        display inline-block
        margin 10px 0
        height 30px
        line-height 30px
        font-size 20px
        color #d34731
        background-color #fef923
        padding 0 10px
        padding-right 20px
        span
            &:after
                position absolute
                right 0
                top 0
                display block
                content ''
                width 0px;
                height 0px;
                border-bottom 15px solid transparent;  /* left arrow slant */
                border-top 15px solid transparent; /* right arrow slant */
                border-right 15px solid #d34731; /* bottom, add background color here */
                font-size 0px;
                line-height 0px
    p
    ul
    ol
        list-style disc inside
        padding 5px 10px
        font-size 16px
        line-height 24px
        color #fff
        li
            margin 5px 0
    ol
        list-style decimal inside
    p
        strong
        span
            display block
        strong
            color #fef923

.mask
    position fixed
    width 100%
    height 100%
    top 0px
    left 0px
    background #000
    opacity 0.9
    display none
    img
        width 100%
.mask-visible
    display block