$offset = -3px
@keyframes shrink
    0%
        left $offset
    25%
        right $offset
    50%
        left $offset
    75%
        right $offset
    100%
        right $offset
@keyframes fadeout
    0%
        opacity 1
        padding-top 30px
    100%
        opacity 0
        padding-top 0px
@keyframes blink
    0%
        opacity 1
    100%
        opacity 0
@-webkit-keyframes right-fade
    0%
        opacity 1
    100%
        -webkit-transform translate3d(-3%,0px,0)
        opacity 1
html
    //background-color #c5f8fe
    background-color #000
    min-height 100%
    background url(/public/images/bg.png?__inline) no-repeat bottom center
    background-size 100%
body
    padding 0
    margin 0
    min-height 100%
a
img
    border 0
    outline none

.finddiff-layer
    display none
    position relative
    width 100%
    background-size 100%
.finddiff-mask
    position fixed
    left 0
    top 0
    width 100%
    height 100%
    background-color #000
    z-index 100
    display none
.layer
    display none
.layer-show
    display block

#finddiff-logo
    position fixed
    left 8px
    top 8px
    width 20%
    z-index 100
    img
        width 100%
        
#finddiff-voice
    position fixed
    right 3px
    top 3px
    width 8%
    z-index 100
    img
        display none
        width 100%
        &.enable
            display block
#finddiff-voice.disable
    img
        display none
        &.disable
            display block
        
#finddiff-entry
    height 100%
    .title-wrap
        margin-top 10%
        text-align center
        img
            width 56%
    .rule-wrap
        margin-top 1%
        text-align center
        img
            width 80%
    .button-wrap
        text-align center
        a
            position relative
            display block
            width 40%
            margin auto
        img
            width 100%  
        .highlight
            position absolute
            right -80%
            top 30%
            width 80%
            vertical-align top
            -webkit-animation right-fade 1s infinite ease
    .timeout
        padding-top 10%
        text-align center
        color red
#finddiff-game.finddiff-layer
    height 100%
    background none
    background-color #bdf7fd
    .sidebar
        background-color #ff6000
        text-align center
        color #fff
        height 36px
        line-height 36px
        font-size 16px
        font-weight bold
        span
            font-size 30px
            font-weight bold
    .spitter
        height 3px
        background url(/public/images/line.png?__inline) repeat-x top center
    .logo-wrap
        margin-top 2%
        text-align center
        img
            position relative
            margin 7% 4%
            width 30%
            display none
            border 0
            padding 0
            &.active
                display inline-block
            &.wrong
                animation shrink
                animation-duration 0.1s
                animation-timing-function ease
                animation-iteration-count 3
                -webkit-animation shrink
                -webkit-animation-duration 0.1s
                -webkit-animation-timing-function ease
                -webkit-animation-iteration-count 3
    .mid-logo-wrap
        img
            width 15%
            margin 5% 2% 
    .max-logo-wrap
        img
            width 14%
            margin 5% 1% 
    .minus-seconds
        position absolute
        left 0
        top 0
        color red
        opacity 0
        font-size 20px
        
        &.fadeout
            animation fadeout
            animation-duration 1s
            animation-timing-function ease
            animation-iteration-count 1
            -webkit-animation fadeout
            -webkit-animation-duration 1s
            -webkit-animation-timing-function ease
            -webkit-animation-iteration-count 1
    .remain-time
        position fixed
        width 100%
        left 0
        bottom 0
        img
            position relative
            height 30px
            margin-left 30px
            vertical-align top
            margin-top 3px
        span
            margin-left 5px
            font-size 20px
            vertical-align top
            margin-top 3px
            color #fff
    .remain-time-warning
        font-weight bold        
