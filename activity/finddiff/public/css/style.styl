                left 53.5%
                top 0
    .button-wrap
        width 70%
        margin-left 15%
        text-align center
        a
            position relative
            display block
            width 55%
            margin auto
        img
            width 100%  
        .long-link
            width 75%
            margin-top 10px
#finddiff-notice.finddiff-layer
    .notice-wrap
        clear both
        position relative
        top 20px
        width 86%
        margin 2%
        margin-top 20px
        padding 5%
        background-color #fff
        text-align center
        border-radius 30px
        .label-wrap
            position absolute
            width 100%
            left 0
            top -15px
            text-align center
        .label
            width 50%
        ol
